{
    "cleanupPeriodDays": 30,
    "includeCoAuthoredBy": false,
    "outputStyle": "default",
    "permissions": {
        "allow": [
            "Bash(find:*)",
            "Bash(ls:*)",
            "Bash(mkdir:*)",
            "Bash(mv:*)",
            "Bash(rg:*)",
            "Bash(tree:*)",

            "Bash(gh pr create:*)",
            "Bash(gh pr edit:*)",
            "Bash(gh pr list:*)",
            "Bash(gh pr view:*)",

            "Bash(git add:*)",
            "Bash(git branch:*)",
            "Bash(git checkout:*)",
            "Bash(git commit:*)",
            "Bash(git diff:*)",
            "Bash(git fetch:*)",
            "Bash(git log:*)",
            "Bash(git ls-tree:*)",
            "Bash(git pull:*)",
            "Bash(git push:*)",
            "Bash(git rev-parse:*)",
            "Bash(git show:*)",
            "Bash(git stash list:*)",
            "Bash(git status:*)",

            "WebFetch(domain:developer.apple.com)",
            "WebFetch(domain:docs.unity3d.com)"
        ],
        "deny": [
            "Bash(chmod:*)",
            "Bash(chown:*)",
            "Bash(curl:*)",
            "Bash(killall:*)",
            "Bash(pkill:*)",
            "Bash(rm:*)",
            "Bash(rm -rf:*)",
            "Bash(sudo:*)",
            "Bash(wget:*)",
            "Bash(xattr:*)",

            "Bash(brew install:*)",

            "Bash(git branch -D:*)",
            "Bash(git clean:*)",
            "Bash(git commit --amend:*)",
            "Bash(git push -f:*)",
            "Bash(git rebase:*)",
            "Bash(git reset:*)",
            "Bash(git stash clear:*)",
            "Bash(git stash drop:*)",
            "Bash(git tag -d:*)",

            "Bash(npm install:*)",
            "Bash(npm install -g:*)",

            "Bash(pip install:*)",

            "Read(.env.*)",
            "Read(**/*apikey*)",
            "Read(**/*credentials*)",
            "Read(**/*secret*)",
            "Read(**/*token*)",
            "Read(**/*.keystore)",
            "Read(**/*.mobileprovision)",
            "Read(**/*.p12)"
        ]
    },
    "hooks": {
        "Stop": [
            {
                "matcher": "*",
                "hooks": [
                    {
                        "type": "command",
                        "command": "osascript -e 'display notification \"Task completed\" with title \"Claude Code\" sound name \"Bip\"'"
                    }
                ]
            }
        ],
        "Notification": [
            {
                "matcher": "*",
                "hooks": [
                    {
                        "type": "command",
                        "command": "osascript -e 'display notification \"Awaiting confirmation\" with title \"Claude Code\" sound name \"Bip\"'"
                    }
                ]
            }
        ]
    }
}